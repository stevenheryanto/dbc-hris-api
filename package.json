{
  "name": "dbc-hris-api",
  "version": "1.0.0",
  "description": "HRIS API with attendance photo upload using Bun and ElysiaJS",
  "main": "src/index.ts",
  "engines": {
    "bun": "1.3.8"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.29.5",
    "elysia": "^1.4.22",
    "postgres": "^3.4.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.8",
    "bun-types": "1.3.8",
    "drizzle-kit": "^0.20.18"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}